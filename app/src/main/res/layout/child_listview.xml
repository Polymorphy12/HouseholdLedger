<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/yearMonthLayout"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/groupYearMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="6pt"
            android:singleLine="true"
            android:text="날짜"

            android:textColor="#000000"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/groupDayOfWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="7pt"
                android:text="요일"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_toEndOf="@id/yearMonthLayout"
        android:orientation="vertical"
        android:layout_width="50dp"
        android:id="@+id/categoryLayout"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemCategory"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="미분류"
            android:textSize="6pt"
            android:textColor="#000000"/>
    </LinearLayout>



    <TextView
        android:id="@+id/itemMoney"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="190000000원"
        />

    <LinearLayout
        android:id="@+id/historyLayout"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/categoryLayout"
        android:layout_toStartOf="@id/itemMoney"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/itemHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="10pt"
            android:singleLine="true"
            android:text="가나다라마바사아자차카xkvgfkdgkasdfkgkfdg"

            android:textColor="#000000"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/itemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="7pt"
                android:text="시간"
                android:textColor="#000000"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/itemMethodsOfPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="7pt"
                android:text="결제수단"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>